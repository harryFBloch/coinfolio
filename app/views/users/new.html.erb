<h1 class = "blue-grey-text lighten-2">Welcome To Coinfolio </h1>
<h2 class = "blue-grey-text lighten-2">Please enter your information to sign up!</h2>

<% if @user && @user.errors %>
  <% @user.errors.full_messages.each do |message| %>
    <h5 class="red-text darken-6"><%= message %></h5>
  <% end %>
<% end %>

<div class="row">
  <form class="col s12" id="sign-up-form" method = "post" action = "/users">
    <div class= "row">
      <div class="input-field col s6">
        <input name="username" type="text" id="username" class = "red-text darken-6"/>
        <label for="username" class="active">Email</label>
      </div>
      <div class="input-field col s6">
        <input name="password" type="text" id="password" class = "red-text darken-6"/>
        <label for="password" class="active ">Password</label>
      </div>
    </div>
    <button class="btn waves-effect waves-light red darken-6" type="submit" name="action" for="sign-up-form">Sign Up
      <i class="material-icons right">send</i>
    </button>
  </form>

</div>
